<h1>Ask a new question!</h1>

<%= form_for(@question) do |f| %>
  <% unless @question.errors.full_messages == [] %>
    <%= error = @question.errors.full_messages %>
  <% end %>

  <div class="row">
    <%= f.label "Title" %><br />
    <%= f.text_field :title %> <%= error[:title] %>
  </div>

  <div class="row">
    <%= f.label "Description" %><br />
    <%= f.text_field :details %> <%= error[:details] %>
  </div>

  <div class="actions"><br />
  <%= f.submit %>
  </div>

<% end %><br />
<%= link_to 'Back', questions_path %>
